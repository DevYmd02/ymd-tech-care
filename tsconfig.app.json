{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components": ["./src/shared/components"],
      "@components/*": ["./src/shared/components/*"],
      "@shared": ["./src/shared"],
      "@shared/*": ["./src/shared/*"],
      "@layout": ["./src/shared/components/ui/layout"],
      "@layout/*": ["./src/shared/components/ui/layout/*"],
      "@system": ["./src/shared/components/system"],
      "@system/*": ["./src/shared/components/system/*"],
      "@ui": ["./src/shared/components/ui"],
      "@ui/*": ["./src/shared/components/ui/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@project-types": ["./src/types"],
      "@project-types/*": ["./src/types/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@pr": ["./src/pages/procurement/pr"],
      "@pr/*": ["./src/pages/procurement/pr/*"],
      "@customer/*": ["./src/modules/master-data/customer/*"],
      "@currency/*": ["./src/modules/master-data/currency/*"]
    }
  },
  "include": ["src"]
}
